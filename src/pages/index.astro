---
import Layout from '../layouts/Layout.astro';
---

<Layout title="JamBuddy - Real-Time Tools for Musicians">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-black to-gray-900 text-white rounded-xl shadow-2xl border border-gray-700 overflow-hidden" aria-labelledby="hero-heading">
    <!-- Background pattern overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-green-600/10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <div class="mb-12 flex justify-center">
          <div class="relative">
            <img src="/images/logo/jam_buddy_clear.png" alt="JamBuddy Logo" class="w-56 filter drop-shadow-2xl" />
            <div class="absolute -inset-4 bg-gradient-to-r from-blue-600/20 via-purple-600/20 to-green-600/20 rounded-full blur-xl"></div>
          </div>
        </div>
        <h1 id="hero-heading" class="text-6xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-white via-blue-100 to-green-100 bg-clip-text text-transparent leading-tight">
          Hear It. Understand It. Create It.
        </h1>
        <p class="text-2xl md:text-3xl text-gray-200 max-w-3xl mx-auto mb-8 leading-relaxed">
          Instant chord detection, visual rhythm coaching & songwriting tools‚Äîoffline, private, one-time purchase.
        </p>
        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-12">
          <a href="https://play.google.com/store/apps/details?id=com.jambuddy.app&hl=en_US" target="_blank" rel="noopener" class="group bg-gradient-to-r from-green-600 to-green-700 text-white px-10 py-5 rounded-xl font-bold text-xl hover:from-green-700 hover:to-green-800 transition-all duration-300 flex items-center justify-center shadow-xl hover:shadow-2xl transform hover:scale-105">
            <img src="/images/icons/google-play-badge.png" alt="Get it on Google Play" class="h-12 mr-3 transition-transform group-hover:scale-110" />
            Download Now
          </a>
          <a href="/features" class="border-2 border-gray-300 text-gray-300 px-10 py-5 rounded-xl font-bold text-xl hover:bg-gray-300 hover:text-black transition-all duration-300 flex items-center justify-center backdrop-blur-sm hover:backdrop-blur-md transform hover:scale-105" aria-label="Explore all JamBuddy features">
            Explore Features
          </a>
          <a href="#education" class="border-2 border-green-500 text-green-400 px-10 py-5 rounded-xl font-bold text-xl hover:bg-green-500 hover:text-black transition-all duration-300 flex items-center justify-center backdrop-blur-sm hover:backdrop-blur-md transform hover:scale-105" aria-label="See educator benefits">
            For Educators
          </a>
        </div>
        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center gap-4 mb-10" aria-label="Key benefits">
          <div class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-200 flex items-center gap-2"><span class="w-2 h-2 bg-green-400 rounded-full"></span> Offline ‚Ä¢ No Ads</div>
          <div class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-200 flex items-center gap-2"><span class="w-2 h-2 bg-blue-400 rounded-full"></span> Real-Time Chord Detection</div>
          <div class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-200 flex items-center gap-2"><span class="w-2 h-2 bg-purple-400 rounded-full"></span> Multi-Instrument</div>
          <div class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-200 flex items-center gap-2"><span class="w-2 h-2 bg-yellow-400 rounded-full"></span> One-Time Purchase</div>
          <div class="px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-200 flex items-center gap-2"><span class="w-2 h-2 bg-pink-400 rounded-full"></span> Privacy Friendly</div>
        </div>
        <!-- Teacher Testimonial -->
        <figure class="max-w-2xl mx-auto">
          <blockquote class="text-lg italic text-gray-300">‚ÄúJamBuddy lets my students see and correct chords instantly‚Äîprep time dropped, engagement went up.‚Äù</blockquote>
          <figcaption class="mt-3 text-sm text-gray-400">‚Äî Sarah M., High School Guitar Instructor</figcaption>
        </figure>
      </div>
    </div>
  </section>

  <!-- Three Core Features -->
  <section class="py-24" aria-labelledby="core-pillars-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 id="core-pillars-heading" class="text-4xl md:text-5xl font-bold text-white mb-6">Turn Any Song Into a Learning Session</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">Detect chords, internalize rhythm, and capture ideas‚Äîfast, accurate, distraction‚Äëfree.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <!-- Listen -->
        <div class="group relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-blue-400 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
          <div class="relative text-center p-10 rounded-2xl bg-gray-800/90 backdrop-blur-sm shadow-xl border border-gray-700 hover:border-blue-500/50 transition-all duration-300">
            <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-12 h-12 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <rect x="4" y="10" width="2" height="4" rx="1" />
                <rect x="8" y="7" width="2" height="10" rx="1" />
                <rect x="12" y="4" width="2" height="16" rx="1" />
                <rect x="16" y="7" width="2" height="10" rx="1" />
                <rect x="20" y="10" width="2" height="4" rx="1" />
              </svg>
            </div>
            <h3 class="text-3xl font-bold mb-6 text-white">Listen</h3>
            <p class="text-gray-300 mb-6 text-lg leading-relaxed">Real-time chord detection with Circle of Fifths, chord charts, next chord predictions, and chromatic tuner.</p>
            <div class="space-y-2 text-blue-300 font-medium">
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>Microphone chord detection</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>Key visualization</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>Chord predictions</div>
            </div>
          </div>
        </div>
        
        <!-- Learn -->
        <div class="group relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-purple-400 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
          <div class="relative text-center p-10 rounded-2xl bg-gray-800/90 backdrop-blur-sm shadow-xl border border-gray-700 hover:border-purple-500/50 transition-all duration-300">
            <div class="w-24 h-24 bg-gradient-to-br from-purple-500 to-purple-700 rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
              </svg>
            </div>
            <h3 class="text-3xl font-bold mb-6 text-white">Learn</h3>
            <p class="text-gray-300 mb-6 text-lg leading-relaxed">Get it under your fingers with a metronome with strum patterns, chord library, and sample tunes.</p>
            <div class="space-y-2 text-purple-300 font-medium">
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>Metronome & rhythms</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>Chord library</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>Tunes for today</div>
            </div>
          </div>
        </div>
        
        <!-- Write -->
        <div class="group relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-green-600 to-green-400 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
          <div class="relative text-center p-10 rounded-2xl bg-gray-800/90 backdrop-blur-sm shadow-xl border border-gray-700 hover:border-green-500/50 transition-all duration-300">
            <div class="w-24 h-24 bg-gradient-to-br from-green-500 to-green-700 rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
              </svg>
            </div>
            <h3 class="text-3xl font-bold mb-6 text-white">Write</h3>
            <p class="text-gray-300 mb-6 text-lg leading-relaxed">Create your own songs with chord and lyrics editors, sheet music integration, and audio recording. Export to JSON.</p>
            <div class="space-y-2 text-green-300 font-medium">
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-green-400 rounded-full mr-3"></span>Song creation tools</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-green-400 rounded-full mr-3"></span>Audio recording</div>
              <div class="flex items-center justify-center"><span class="w-2 h-2 bg-green-400 rounded-full mr-3"></span>JSON export</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature Showcase with Carousels -->
  <section class="py-20 bg-gray-900 rounded-lg mt-8" aria-labelledby="carousel-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="carousel-heading" class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">See JamBuddy in Action</h2>
      <div class="relative max-w-4xl mx-auto">
        <div class="carousel-container overflow-hidden rounded-lg">
          <div class="carousel-track flex transition-transform duration-300" id="main-carousel" role="region" aria-label="Feature screenshots">
            <!-- All Features Images -->
            <!-- Real-time Chord Recognition -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img src="/images/features/circle_and_song_chords.png" alt="Real-time chord recognition interface" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Real-Time Chord Recognition</h4><p class="text-gray-300">Live chord detection with Circle of Fifths visualization showing key relationships and chord progressions.</p></div></div>
            
            <!-- Comprehensive Tuner -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/tuner.png" alt="Chromatic tuner interface" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Chromatic Tuner</h4><p class="text-gray-300">Precise chromatic tuner with visual feedback for all stringed instruments.</p></div></div>
            
            <!-- Chord Library Browser -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/chord_browser_chord_chart.png" alt="Chord library browser screen" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Comprehensive Chord Library</h4><p class="text-gray-300">Browse and learn chord fingerings for guitar, ukulele, mandolin and more with detailed chord charts.</p></div></div>
            
            <!-- Song Manager -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/tunes_manager_list.png" alt="Song library management list" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Song Library Management</h4><p class="text-gray-300">Organize and manage your personal collection of songs with lyrics, chords, and backing tracks.</p></div></div>
            
            <!-- Metronome -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/metronome_and_next_chord.png" alt="Metronome with next chord predictions" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Metronome & Next Chord Predictions</h4><p class="text-gray-300">Built-in metronome with strum patterns and intelligent next chord predictions.</p></div></div>
            
            <!-- Full Screen Chord Charts -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/full_size_chord_chart.png" alt="Full screen chord chart view" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Full Screen Chord Charts</h4><p class="text-gray-300">Large, clear chord charts for easy reading during practice and performance.</p></div></div>
            
            <!-- Sheet Music Support -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/sheet_music_phone.png" alt="Sheet music screen" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Sheet Music Support</h4><p class="text-gray-300">View and manage sheet music alongside your chord progressions and lyrics.</p></div></div>
            
            <!-- Audio Player -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/song_player_and_looping.png" alt="Audio player and looping interface" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Audio Player & Looping</h4><p class="text-gray-300">Play and loop audio tracks while following chord progressions and lyrics.</p></div></div>
            
            <!-- Chord Editor -->
            <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/tunes_manager_chord_editor.png" alt="Chord editor progression builder" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Chord Editor</h4><p class="text-gray-300">Create and edit chord progressions with an intuitive chord sequence editor.</p></div></div>
            
            <!-- Multi-Instrument Support -->
      <div class="carousel-slide"><div class="bg-gray-800 rounded-lg p-6 mx-2"><div class="aspect-w-16 aspect-h-10 mb-4"><img loading="lazy" decoding="async" src="/images/features/full_size_chord_chart_mando.png" alt="Mandolin chord chart instrument support" class="object-contain bg-gray-700 rounded" width="800" height="500" /></div><h4 class="text-xl font-bold text-white mb-2">Multi-Instrument Support</h4><p class="text-gray-300">Support for guitar, ukulele, mandolin, banjo, and more stringed instruments.</p></div></div>
          </div>
        </div>
        <!-- Carousel controls -->
    <button class="carousel-btn carousel-prev absolute left-4 top-1/2 transform -translate-y-1/2 bg-black/50 text-white p-3 rounded-full hover:bg-black/70 transition-colors z-10" aria-label="Previous slides">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
    <button class="carousel-btn carousel-next absolute right-4 top-1/2 transform -translate-y-1/2 bg-black/50 text-white p-3 rounded-full hover:bg-black/70 transition-colors z-10" aria-label="Next slides">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
        
        <!-- Slide indicators -->
        <div class="flex justify-center mt-6 space-x-2" id="carousel-indicators">
          <!-- Indicators will be generated by JavaScript -->
        </div>
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section id="education" class="py-20 bg-gradient-to-br from-green-900/20 via-blue-900/20 to-purple-900/20 rounded-xl" aria-labelledby="education-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 id="education-heading" class="text-4xl md:text-5xl font-bold text-white mb-6">Perfect for Music Education</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">Empower your students with real-time feedback and comprehensive learning tools</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="group p-8 rounded-xl bg-gray-800/50 backdrop-blur-sm border border-gray-700 hover:border-green-500/50 transition-all duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-blue-600 rounded-lg flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
